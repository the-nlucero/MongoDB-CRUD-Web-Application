<h3><a class="btn btn-secondary" href="/solarisrecords"><i class="fa fa-plus"></i> Create New</a> Solaris Records List</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Role</th>
            <th>Email Address</th>
            <th>Phone Number</th>
            <th>Date Of Birth</th>
            <th>Gender</th>
            <th>Status</th>
            <th>Salary </th>
            <th>Specialization </th>
            <th>Last Appointment</th>
            <th>Primary Doctor</th>
            <th>Diagnosis</th>
            <th>Treatment </th>
            <th>Prescription </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.First_Name}}</td>
            <td>{{this.Last_Name}}</td>
            <td>{{this.Role}}</td>
            <td>{{this.Email_Address}}</td>
            <td>{{this.Phone_Number}}</td>
            <td>{{this.Date_Of_Birth}}</td>
            <td>{{this.Gender}}</td>
            <td>{{this.Status}}</td>
            <td>{{this.Salary}}</td>
            <td>{{this.Specialization}}</td>
            <td>{{this.Last_Appointment}}</td>
            <td>{{this.Primary_Doctor}}</td>
            <td>{{this.Diagnosis}}</td>
            <td>{{this.Treatment}}</td>
            <td>{{this.Prescription}}</td>
            <td>
                <a href="/solarisrecords/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/solarisrecords/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>

            </td>
        </tr>
        {{/each}}
    </tbody>
</table>