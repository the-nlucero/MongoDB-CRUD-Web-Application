<h3>{{viewTitle}}</h3>

<form action="/solarisrecords" method="POST" autocomplete="off">
<input type="hidden" name="_id" value="{{solarisrecords._id}}">

  
    <div class="form-group">
        <label>First Name</label>
        <input type="text" class="form-control" name="First_Name" placholder="First Name" value="{{solarisrecords.First_Name}}" />
        <div class="text-danger">
            {{solarisrecords.First_NameError}}
        </div>
    </div>


    <div class="form-group">
        <label>Last Name</label>
        <input type="text" class="form-control" name="Last_Name" placholder="Last Name" value="{{solarisrecords.Last_Name}}" />
        <div class="text-danger">
            {{solarisrecords.Last_NameError}}
        </div>
    </div>


    <div class="form-group">
        <label>Role</label>
        <input type="text" class="form-control" name="Role" placholder="Role" value="{{solarisrecords.Role}}" />
    </div>


    <div class="form-group">
        <label>Email Address</label>
        <input type="text" class="form-control" name="Email_Address" placholder="Email Address" value="{{solarisrecords.Email_Address}}" />
        <div class="text-danger">
            {{solarisrecords.Email_AddressError}}
        </div>
    </div>


    <div class="form-group">
        <label>Phone Number (###-###-####)</label>
        <input type="text" class="form-control" name="Phone_Number" placholder="Phone Number" value="{{solarisrecords.Phone_Number}}" />
    </div>


    <div class="form-group">
        <label>Date of Birth (YYYY-MM-DD)</label>
        <input type="text" class="form-control" name="Date_Of_Birth" placholder="Date Of Birth" value="{{solarisrecords.Date_Of_Birth}}" />
    </div>


    <div class="form-group">
        <label>Gender</label>
        <input type="text" class="form-control" name="Gender" placholder="Gender" value="{{solarisrecords.Gender}}" />
    </div>

    <div class="form-group">
        <label>Status</label>
        <input type="text" class="form-control" name="Status" placholder="Status" value="{{solarisrecords.Status}}" />
    </div>

    <div class="form-group">
        <label>Salary (integer values only)</label>
        <input type="text" class="form-control" name="Salary" placholder="Salary" value="{{solarisrecords.Salary}}" />
    </div>

    <div class="form-group">
        <label>Specialization</label>
        <input type="text" class="form-control" name="Specialization" placholder="Specialization" value="{{solarisrecords.Specialization}}" />
    </div>

    <div class="form-group">
        <label>Last Appointment (YYYY-MM-DD)</label>
        <input type="text" class="form-control" name="Last_Appointment" placholder="Last Appointment" value="{{solarisrecords.Last_Appointment}}" />
    </div>

    <div class="form-group">
        <label>Primary Doctor</label>
        <input type="text" class="form-control" name="Primary_Doctor" placholder="Primary Doctor" value="{{solarisrecords.Primary_Doctor}}" />
    </div>

    <div class="form-group">
        <label>Diagnosis</label>
        <input type="text" class="form-control" name="Diagnosis" placholder="Diagnosis" value="{{solarisrecords.Diagnosis}}" />
    </div>


    <div class="form-group">
        <label>Treatment (for multiple treatments please use a comma after every one)</label>
        <input type="text" class="form-control" name="Treatment" placholder="Treatment" value="{{solarisrecords.Treatment}}" />
    </div>

    <div class="form-group">
        <label>Prescription (for multiple prescriptions please use a comma after every one)</label>
        <input type="text" class="form-control" name="Prescription" placholder="Prescription" value="{{solarisrecords.Prescription}}" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
        <a class="btn btn-secondary" href="/solarisrecords/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>




</form>